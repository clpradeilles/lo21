double* pt1=4096; // erreur tentative de conversion d'un type int vers double
double* pt2=(double*)4096; // ok cast autoriser mais dangereux Ã  utiliser
void* pt3=pt1; // ok conversion implicite d'un double vers un void autoriser
pt1=pt3; // erreur conversion implicite dans l'autre sens (void -> double)
pt1=(double*)pt3; //ok cast autoriser
double d1=36; // ok
const double d2=36; //ok
double* pt4=&d1; //ok
const double* pt5=&d1; // ok
*pt4=2.1; //ok
*pt5=2.1; // erreur type const double pas de modif possible
pt4=&d2; // erreur pas de conv de const double* vers double*
pt5=&d2; // ok
double* const pt6=&d1; // ok
pt6=&d1; // erreur cont ne peut etre modifier
*pt6=2.78; // ok il sagit dun pointeur constant pas d'un pointeur const
double* const pt6b=&d2; //ok
const double* const pt7=&d1; //ok
pt7=&d1; //erreur modif impossible d'une constante
*pt7=2.78; // erreur modif impossible d'une pointeur const
double const* pt8=&d1; // ok
pt8=&d2; // ok
pt8=&d1; // ok
*pt8=3.14; // erreur modif impossible